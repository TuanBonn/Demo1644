<br>
<div class="container col-md-10 text-center">
    <table class="table table-dark">
        <tr>
            <th colspan="6" class="h1 text-uppercase " style="font-family:Lucida Console">
                Car List
            </th>
        </tr>
        <tr>
            <th>
                <a class="btn btn-primary" href="/car/add" style="width: 150px">Add</a>
            </th>
            <th colspan="3">
                <form action="/car/search" method="post">
                    <div class="form-group">
                        <input class="form-control" type="search" placeholder="Search by car's name" name="name" id=""
                               required>
                    </div>
                </form>
            </th>
            <th colspan="3">
                <select class="form-control" name="sort" id="" onchange="window.location.href=this.value">
                    <option value="#">Sort by Price</option>
                    <option value="/car/priceasc">Price gradually increases</option>
                    <option value="/car/pricedesc">Prices gradually decrease</option>
                    <option value="/car/sortbyquantity">OutStock</option>
                </select>
        </tr>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Menu</th>
        </tr>
        {{#each cars}}
            <tr>
                <td>{{ name }}</td>
                <td>${{ price }}</td>
                <td>{{ quantity }}</td>
                <td>
                    <a href="/car/detail/{{ _id }}">
                        <img src="{{ image }}" width="150" height="150">
                    </a>
                </td>
                <td>
                    <br>
                    <a class="btn btn-warning" href="/car/edit/{{ _id }}" style="width: 150px">Edit</a>
                    <br>
                    <br>
                    <a class="btn btn-danger" href="/car/delete/{{ _id }}"
                       onclick="return confirm('Are you sure to delete this student ?');" style="width: 150px" >Delete</a>
                </td>
            </tr>
            {{/each}}
    </table>
</div>