<br>
<div class="container col-md-10 text-center">
    <table class="table table-dark">
        <tr>
            <th colspan="6" class="h1 text-uppercase " style="font-family:Lucida Console">
                Product List
            </th>
        </tr>
        <tr>
            <th>
                <a class="btn btn-primary" href="/product/add" style="width: 150px">Add</a>
            </th>
            <th colspan="3">
                <form action="/product/search" method="post">
                    <div class="form-group">
                        <input class="form-control" type="search" placeholder="Search by student's name" name="name" id=""
                               required>
                    </div>
                </form>
            </th>
            <th colspan="3">
                <select class="form-control" name="sort" id="" onchange="window.location.href=this.value">
                    <option value="#">Sort by</option>
                    <option value="/product/priceasc">Price gradually increases</option>
                    <option value="/product/pricedesc">Prices gradually decrease</option>
                    <option value="/product/nameasc">Names ascending</option>
                    <option value="/product/namedesc">Names descending</option>
                </select>
        </tr>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Menu</th>
        </tr>
        {{#each products}}
            <tr>
                <td>{{ name }}</td>
                <td>${{ price }}</td>
                <td>{{ description }}</td>
                <td>
                    <a href="/product/detail/{{ _id }}">
                        <img src="{{ image }}" width="150" height="150">
                    </a>
                </td>
                <td>
                    <br>
                    <a class="btn btn-warning" href="/product/edit/{{ _id }}" style="width: 150px">Edit</a>
                    <br>
                    <br>
                    <a class="btn btn-danger" href="/product/delete/{{ _id }}"
                       onclick="return confirm('Are you sure to delete this student ?');" style="width: 150px" >Delete</a>
                </td>
            </tr>
            {{/each}}
    </table>
</div>